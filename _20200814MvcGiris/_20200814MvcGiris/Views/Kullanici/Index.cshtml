@model List<Kullanici>

    <div class="alert alert-primary" role="alert">
        Kullanıcı Listesi
    </div>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Eposta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.ad</td>
                <td>@k.soyad</td>
                <td>@k.eposta</td>
                <td>
                    <a href="/Kullanici/Duzenle/@k.kullaniciID" class="btn btn-sm btn-outline-primary">
                        Düzenle
                    </a>
                    <a href="/Kullanici/Sil/@k.kullaniciID" class="btn btn-sm btn-danger">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>



































